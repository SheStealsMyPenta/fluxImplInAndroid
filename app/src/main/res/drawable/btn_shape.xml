<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/green">
    <selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <!--圆角-->
                <corners android:radius="5dp" />
                <!--填充颜色为白色-->
                <solid android:color="@color/orange_light" />
                <!--描边-->
                <stroke android:width="1dp" android:color="@color/orange_light" />
            </shape>
        </item>
        <item android:state_enabled="false" android:drawable="@color/white"/>
        <item android:state_hovered="true" android:drawable="@color/orange_light"/>  <!-- hoverd为鼠标的悬停状态 -->
        <item android:drawable="@color/white">
            <shape android:shape="rectangle">
                <!--圆角-->
                <corners android:radius="10dp" />
                <!--填充颜色为白色-->
                <solid android:color="@color/white" />
                <!--描边-->
                <stroke android:width="1dp" android:color="@color/white" />
            </shape>

        </item>

    </selector>
</ripple>

