<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" android:drawable="@color/hardGrey"/>
    <item android:state_hovered="true" android:drawable="@color/hardGrey"/>  <!-- hoverd为鼠标的悬停状态 -->
    <item >
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/hardGrey"
                android:startColor="@color/hardGrey"/>
            <stroke
                android:width="1.5dp"
                android:color="@color/black"/>
            <corners
                android:bottomLeftRadius="6dip"
                android:bottomRightRadius="6dip"
                android:topLeftRadius="6dip"
                android:topRightRadius="6dip"/>
        </shape>

    </item>


</selector>
