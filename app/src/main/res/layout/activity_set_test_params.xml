<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAlignment="center"
       android:gravity="center_vertical"
     android:text="测试参数"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_weight="3"

            android:background="@drawable/layout_operator_grey"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                >
                <TextView
                    android:background="@color/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="设置"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:elevation="20dp"
                android:translationZ="20dp"
                android:id="@+id/transformer_layout"
                android:background="@drawable/shape_settig"
                android:orientation="horizontal"

                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="left|center_vertical"
                        android:text="单        位:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="设        备:"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text=""
                            android:id="@+id/nameOfSubstation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_param_text_size" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:text=""
                            android:id="@+id/nameOfTheTransformer"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_param_text_size"
                            android:layout_marginRight="30dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/divideLine1"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rotateTypeLayout"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:text="测试绕组:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size" />

                </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"

                  >

                  <TextView
                      android:id="@+id/rotateType"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      android:layout_marginRight="30dp"
                      android:layout_marginBottom="5dp"
                      android:layout_weight="1"
                      android:gravity="left|center_vertical"
                      android:text="A相"
                      android:textColor="@color/black"
                      android:textSize="@dimen/setting_param_text_size" />



              </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="1.5dp"
                android:id="@+id/divideLine2"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:id="@+id/positionLayout"


                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:text="分接位置:"
                         android:paddingLeft="20dp"
                        android:textSize="@dimen/setting_param_text_size"
                        android:textColor="@color/black"

                        android:gravity="left|center_vertical"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:textSize="@dimen/setting_param_text_size"
                        android:text="9a"
                        android:id="@+id/positions"
                        android:textColor="@color/black"
                        android:layout_marginRight="30dp"
                        />

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/divideLine3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:visibility="gone"
                android:id="@+id/inputAndOutput"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                     android:visibility="gone"
                    android:orientation="horizontal"

                    >
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="激  励  端:"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_param_text_size"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="响  应  端:"
                            android:paddingLeft="20dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_param_text_size" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="left|center_vertical"
                                android:layout_weight="1"
                                android:text="A相"
                                android:textColor="@color/black"
                                android:textSize="@dimen/setting_param_text_size"
                                android:id="@+id/input"
                                android:layout_marginRight="30dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="left|center_vertical"
                                android:layout_weight="1"
                                android:text="B相"
                                android:id="@+id/output"
                                android:textColor="@color/black"
                                android:textSize="@dimen/setting_param_text_size"
                                android:layout_marginRight="30dp"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/divideLine4"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/grey"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:focusableInTouchMode="true"
                android:id="@+id/scanAttr_InfoLayout"
             >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="扫描设备:"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="扫频范围:"
                        android:visibility="gone"
                        android:id="@+id/scanRangeTitle"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="扫频点数:"
                        android:visibility="gone"
                        android:id="@+id/scanPointTitle"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="变压器设备"
                        android:id="@+id/scanMode"
                        android:clickable="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"
                        android:layout_marginRight="30dp"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:clickable="false"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="1 kHz – 1000kHz"
                        android:id="@+id/frequency"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"
                        android:layout_marginRight="30dp"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                  
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="1000点"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_param_text_size"
                        android:id="@+id/numberOfPointss"
                        android:layout_marginRight="30dp"
                        />


                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/grey"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="60dp"

                  android:orientation="vertical"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      >
                      <Button
                          android:layout_width="match_parent"
                          android:layout_margin="5dp"
                          android:layout_height="match_parent"
                          android:textSize="22dp"
                          android:id="@+id/confirm"
                          android:text="测  试"
                          android:textColor="@color/white"
                          android:background="@drawable/btn_shape_operater"
                          android:layout_weight="1"
                          />
                      <Button
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:textSize="22dp"
                          android:layout_margin="5dp"
                          android:layout_weight="1"
                          android:id="@+id/cancel"
                          android:text="取  消"
                          android:textColor="@color/white"
                          android:background="@drawable/btn_shape_operater"
                          />
                  </LinearLayout>

              </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/grey"/>
        </LinearLayout>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/grey"
 />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/grey"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>