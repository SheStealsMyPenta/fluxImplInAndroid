<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_height="match_parent"
                android:text="数据管理"
                android:gravity="center_vertical"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:id="@+id/nameOfSubstation"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="单位名称"
                    android:textSize="20dp"
                    android:background="@color/fbutton_color_peter_river"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey"/>

                <ListView
                    android:id="@+id/listOfSubstation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

            </LinearLayout>
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/nameOfTransformers"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="变压器名称"
                    android:textSize="20dp"
                    android:background="@color/fbutton_color_peter_river"
                    android:textColor="@color/white"

                    android:textAlignment="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listOfTransformer"
                    >

                </ListView>
            </LinearLayout>
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/date"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="测试日期"
                    android:textSize="20dp"
                    android:background="@color/fbutton_color_peter_river"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listOfdate"
                    >

                </ListView>
            </LinearLayout>
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="测试数据"
                    android:textSize="20dp"
                    android:background="@color/fbutton_color_peter_river"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/grey"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listOfCSVData"
                    >

                </ListView>
            </LinearLayout>
            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.12"
                android:orientation="vertical">

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="打开"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:background="@drawable/btn_shape_operater"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/openTheFile"
                    />

                <Button
                    android:id="@+id/deleteTheFile"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_shape_operater"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="返回"
                    android:textSize="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_shape_operater"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/backToLast"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/grey"
            ></View>

    </LinearLayout>


</LinearLayout>